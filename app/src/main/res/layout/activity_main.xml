<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mikatekonkatie.miwok.MainActivity">

        <TextView
            android:text="Numbers"
            android:id="@+id/numbers"
            style="@style/CategoryStyle"
            android:background="@color/category_numbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openNumberActivity"/>


        <TextView
            android:text="Family Members"
            android:id="@+id/family"
            style="@style/CategoryStyle"
            android:background="@color/category_family"
            android:onClick="openFamilyMembersActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:text="Colors"
            android:id="@+id/colors"
            style="@style/CategoryStyle"
            android:background="@color/category_colors"
            android:onClick="openColorsActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:text="Phrases"
            android:id="@+id/phrases"
            style="@style/CategoryStyle"
            android:background="@color/category_phrases"
            android:onClick="openPhrasesActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>





    </LinearLayout>